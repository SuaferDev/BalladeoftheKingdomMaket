<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25131a"
    tools:context=".Setting">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/arrow_left"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BETA"
                        android:padding="8dp"
                        android:textSize="26sp"
                        android:gravity="right|center"
                        android:textColor="#25131a"
                        android:background="#30FFFFFF"
                        app:fontFamily="@font/mainfont"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:id="@+id/settingimage"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:src="@drawable/menu_icon_setting"/>
                    <TextView
                        android:id="@+id/settingtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Настройки"
                        android:textSize="50sp"
                        android:paddingLeft="10sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/mainfont"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="0dp">


                        <LinearLayout
                            android:id="@+id/linear1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:layout_marginLeft="20dp"
                            android:background="#262626">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Язык / Language"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                app:fontFamily="@font/mainfont"
                                android:textColor="#FFFFFF" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="1dp"
                                android:background="#80FFFFFF"
                                android:gravity="center"
                                android:layout_marginBottom="10sp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/image_lang_ru"
                                    android:layout_width="30sp"
                                    android:layout_height="30sp"
                                    android:src="@drawable/settingon"/>
                                <TextView
                                    android:id="@+id/text_lang_rus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Русский"
                                    android:textSize="24sp"
                                    android:paddingStart="10sp"
                                    android:gravity="center"
                                    android:textColor="#FFFFFF"
                                    app:fontFamily="@font/mainfont"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <!--<LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/languageimage2"
                                    android:layout_width="30sp"
                                    android:layout_height="30sp"
                                    android:src="@drawable/settingoff"/>
                                <TextView
                                    android:id="@+id/english"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" English"
                                    android:textSize="26sp"
                                    android:paddingLeft="5sp"
                                    android:gravity="center"
                                    android:textColor="#FFFFFF"
                                    app:fontFamily="@font/mainfont"/>
                            </LinearLayout> -->
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:background="#262626">

                            <TextView
                                android:id="@+id/gamefunction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="Игровые функции"
                                android:textSize="24sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                app:fontFamily="@font/mainfont"
                                android:textColor="#FFFFFF"
                                tools:ignore="HardcodedText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="1dp"
                                android:background="#80FFFFFF"
                                android:gravity="center"
                                android:layout_marginBottom="10sp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/image_autostart"
                                    android:layout_width="30sp"
                                    android:layout_height="30sp"
                                    android:src="@drawable/settingoff"/>
                                <TextView
                                    android:id="@+id/text_autostart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Авто продолжение игры"
                                    android:textSize="24sp"
                                    android:paddingStart="10sp"
                                    android:gravity="center"
                                    android:textColor="#FFFFFF"
                                    app:fontFamily="@font/mainfont"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/image_firstscreen"
                                    android:layout_width="30sp"
                                    android:layout_height="30sp"
                                    android:src="@drawable/settingon"/>
                                <TextView
                                    android:id="@+id/text_firstscreen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Начальный экран*"
                                    android:textSize="24sp"
                                    android:paddingStart="10sp"
                                    android:gravity="center"
                                    android:textColor="#FFFFFF"
                                    app:fontFamily="@font/mainfont"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/skipfirstscreeninf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*Подрузомевается пропустить первый экрна с историй о распаде прошлого королевства"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:textColor="#50FFFFFF"
                                app:fontFamily="@font/mainfont"
                                tools:ignore="HardcodedText" />

                            <!--<LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/image_skip"
                                    android:layout_width="30sp"
                                    android:layout_height="30sp"
                                    android:src="@drawable/settingoff"/>
                                <TextView
                                    android:id="@+id/text_skip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Пропуск хода*"
                                    android:textSize="26sp"
                                    android:paddingStart="10sp"
                                    android:gravity="center"
                                    android:textColor="#FFFFFF"
                                    app:fontFamily="@font/mainfont"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/skipanswerinf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*Вкл/Выкл экрана с пропуском хода"
                                android:textSize="22sp"
                                android:gravity="center"
                                android:textColor="#50FFFFFF"
                                app:fontFamily="@font/mainfont"
                                tools:ignore="HardcodedText" /> -->

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Нашли баг или есть предложение? Свяжитесь с разработчиком:"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:textColor="#60FFFFFF"
                        app:fontFamily="@font/mainfont"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="suafer.developer@mail.ru"
                        android:textSize="26sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#65FFFFFF"
                        app:fontFamily="@font/mainfont"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>