<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".Menu">

    <LinearLayout
        android:id="@+id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@drawable/menu_background_1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ballade of the"
            android:textSize="100sp"
            android:gravity="center | bottom"
            android:textColor="#FFC630"
            android:textStyle="bold"
            app:fontFamily="@font/mainfont"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kingdom"
            android:gravity="center"
            android:textColor="#FFC630"
            android:textSize="200sp"
            android:textStyle="bold"
            app:fontFamily="@font/mainfont" />

        <ImageView
            android:id="@+id/test_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="8dp"
            android:src="@drawable/castle"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:paddingTop="2dp"
            android:paddingRight="17dp"
            android:paddingBottom="8dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:padding="4dp"
                android:background="#90000000">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/menu_icon_play"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/newgametextview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="Новая Игра"
                    android:textSize="70sp"
                    android:gravity="center"
                    app:fontFamily="@font/mainfont"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:padding="4dp"
                android:background="#90000000">
                <ImageView
                    android:id="@+id/image_continie"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/menu_icon_save"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/continietextview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="Продолжить"
                    android:textSize="70sp"
                    android:gravity="center"
                    app:fontFamily="@font/mainfont"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:padding="4dp"
                android:background="#90000000">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/menu_icon_setting"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/settingtextview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="Настройки"
                    android:textSize="70sp"
                    android:gravity="center"
                    app:fontFamily="@font/mainfont"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:text="By Suafer, 2023 year, BETA TEST"
            android:textSize="40sp"
            android:textStyle="bold"
            app:fontFamily="@font/mainfont"
            android:textColor="#50FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>